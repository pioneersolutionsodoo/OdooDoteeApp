<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_subscription_template_view_form_wp_inherit" model="ir.ui.view">
        <field name="name">sale.subscription.whatsapp.form.view</field>
        <field name="model">sale.subscription.template</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_template_view_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_mail_template_id']" position="after">
                <field name="whatsapp_template_id" string="WhatsApp Template"
                      attrs="{'invisible': [('payment_mode', '!=', 'send_by_whatsapp')], 'required': [('payment_mode', '=', 'send_by_whatsapp')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
